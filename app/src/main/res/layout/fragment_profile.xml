<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundwelcome"
    android:orientation="vertical"
    tools:context=".ProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewProfile"
        android:layout_width="103dp"
        android:layout_height="98dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/profileimage" />

    <TextView
        android:id="@+id/usersName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewProfile"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:text="the users name"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/usersText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usersName"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:text="the users email"
        android:textSize="20dp"
        />
    <Button
        android:id="@+id/buttonCamera"
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:layout_below="@+id/usersText"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_baseline_camera_alt_24"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="385dp"
        android:layout_height="390dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        app:cardCornerRadius="20dp">

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="64dp"
            android:descendantFocusability="blocksDescendants"
            android:padding="20dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/Array"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="95dp"
            android:layout_marginTop="330dp"
            android:background="#76a5af"
            android:padding="10dp"
            android:text="my games"
            android:textSize="20dp" />
    </androidx.cardview.widget.CardView>


</RelativeLayout>