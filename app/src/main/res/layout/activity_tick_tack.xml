<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:clickable="false"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:background="@drawable/backgroundmain"
    tools:context=".TickTack">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        app:cardCornerRadius="20dp"
        android:orientation="vertical">
        <com.example.carbonjava.TickTackToeBoard
            android:id="@+id/tickTackToeBoard2"
            android:layout_width="match_parent"
            android:layout_height="398dp"
            android:layout_marginTop="50dp"
            custom:boardColor="@color/black"
            custom:xColor="@color/black"
            custom:oColor="@color/black"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <Button
                android:id="@+id/firstbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="60dp"
                android:onClick="home"
                android:textSize="20dp"
                android:visibility="invisible" />
            <Button
                android:id="@+id/secondbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="60dp"
                android:visibility="invisible"
                android:textSize="20dp" />
            <Button
                android:id="@+id/thirdbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="60dp"
                android:onClick="addPlayerO"
                android:visibility="invisible"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/forthbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="180dp"
                android:onClick="addPlayerO"
                android:visibility="invisible"
                android:textSize="20dp" />
            <Button
                android:id="@+id/fithbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="180dp"
                android:onClick="addPlayerO"
                android:visibility="invisible"
                android:textSize="20dp" />
            <Button
                android:id="@+id/sixbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="180dp"
                android:onClick="addPlayerO"
                android:visibility="invisible"
                android:textSize="20dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/tenbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="300dp"
                android:visibility="invisible"
                android:textSize="20dp" />
            <Button
                android:id="@+id/elevenbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="300dp"
                android:visibility="invisible"
                android:textSize="20dp" />
            <Button
                android:id="@+id/tewelvebutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="300dp"
                android:onClick="addPlayerO"
                android:visibility="invisible"
                android:textSize="20dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/Liner"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="80dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="5dp"
                android:onClick="home"
                android:text="home"
                android:textSize="20dp" />

            <TextView
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="00:00"
                android:textSize="25dp" />
        </LinearLayout>

        <Button
        android:id="@+id/PLayerO"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="75dp"
        android:layout_gravity="bottom" android:layout_marginBottom="10dp"
        android:onClick="addPlayerO"
        android:text="Play as O"
        android:textSize="20dp" />

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>

