<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    android:background="@drawable/signupbackground"
    tools:context=".SignUpActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="150dp"
                android:textSize="50dp"
                android:text="Sing Up"
            android:textColor="@color/black"
                />
        <EditText
            android:id="@+id/editTextNameSignin"
            android:layout_width="285dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:hint="Name"
            android:paddingStart="15dp"
            android:paddingLeft="10dp"
            android:inputType="textPersonName"
            android:textColorHint="#ffff"
            android:textSize="23dp" />

        <EditText
            android:id="@+id/editTextUserNameSignin"
            android:layout_width="285dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:hint="Last Name"
            android:paddingStart="15dp"
            android:paddingLeft="10dp"
            android:inputType="textPersonName"
            android:textColorHint="#ffff"
            android:textSize="23dp" />

        <EditText
            android:id="@+id/editTextEmailSignin"
            android:layout_width="285dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingStart="15dp"
            android:paddingLeft="10dp"
            android:textColorHint="#ffff"
            android:textSize="23dp" />

        <EditText
            android:id="@+id/editTextPasswordSignin"
            android:layout_width="285dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:hint="password"
            android:paddingStart="15dp"
            android:paddingLeft="10dp"
            android:inputType="textPassword"
            android:textColorHint="#ffff"
            android:textSize="23dp" />

        <EditText
            android:id="@+id/editTextPhoneSignin"
            android:layout_width="285dp"
            android:layout_height="50dp"
            android:layout_marginBottom="65dp"
            android:hint="phone number"
            android:paddingStart="15dp"
            android:paddingLeft="10dp"
            android:inputType="phone"
            android:layout_marginHorizontal="5dp"
            android:textColorHint="#ffff"
            android:textSize="23dp" />

        <Button
            android:id="@+id/buttonSigned"
            android:layout_width="216dp"
            android:layout_height="38dp"
            android:layout_margin="14dp"
            android:background="@drawable/button"
            android:onClick="welcome"
            android:text="Create an account"
            android:textSize="20dp" />

        <TextView
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22dp"
            android:layout_marginHorizontal="5dp"
            android:textColor="@color/white"
            android:onClick="loginFsign"
            android:text="you already have an account"
            android:textSize="20dp" />
</LinearLayout>