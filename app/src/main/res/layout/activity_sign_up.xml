<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/signupback"
    tools:context=".SignUpActivity">

        <EditText
            android:id="@+id/editTextNameSignin"
            android:layout_width="277dp"
            android:layout_height="50dp"
            android:layout_marginBottom="8dp"
            android:background="#3a5bd3"
            android:ems="10"
            android:hint="fullName"
            android:inputType="textPersonName"
            android:textColor="@color/white"
            android:textColorHint="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editTextUserNameSignin"
            android:layout_width="277dp"
            android:layout_height="50dp"

            android:background="#3a5bd3"
            android:ems="10"
            android:hint="name"
            android:inputType="textPersonName"
            android:paddingStart="5dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editTextEmailSignin"
            android:layout_width="274dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:background="#3a5bd3"
            android:ems="10"
            android:hint="email"
            android:inputType="textEmailAddress"
            android:paddingStart="5dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editTextPasswordSignin"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:background="#3a5bd3"
            android:ems="10"
            android:hint="password"
            android:inputType="textPassword"
            android:paddingStart="5dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editTextPhoneSignin"
            android:layout_width="266dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:background="#3a5bd3"
            android:ems="10"
            android:hint="phone"
            android:inputType="phone"
            android:paddingStart="5dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20dp" />

        <Button
            android:id="@+id/buttonSigned"
            android:layout_width="283dp"
            android:layout_height="77dp"
            android:layout_gravity="center"
            android:layout_margin="14dp"
            android:onClick="welcome"
            android:background="@drawable/button"
            android:text="Create an account"
            android:textSize="20dp" />

        <TextView
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="loginFsign"
            android:text="you already have an account"
            android:textSize="20dp" />
</LinearLayout>