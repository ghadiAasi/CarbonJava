<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bdc8da"
    tools:context=".MathGames">

    <ImageButton
        android:layout_width="48dp"
        android:layout_height="45dp"
        android:onClick="back"
        android:background="@drawable/exit"
        tools:ignore="ContentDescription" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="1"
        android:rowCount="2">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewMath1"
            android:layout_width="wrap_content"
            android:layout_height="9dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginStart="60dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="40dp"
            app:cardCornerRadius="8sp"
            app:cardElevation="8sp">

            <TextView
                android:id="@+id/levelMath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:text="easy"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/levelMathN"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="210dp"
                android:text="0"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/clockMath"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:text="00:00"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/question"
                android:layout_width="232dp"
                android:layout_height="132dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="the question"
                android:textSize="40sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewMath2"
            android:layout_width="270dp"
            android:layout_height="14dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="50dp"
            app:cardCornerRadius="8sp"
            app:cardElevation="8sp">

            <Button
                android:id="@+id/BTNFirst"
                android:layout_width="122dp"
                android:layout_height="68dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:background="#ff7589"
                android:textSize="25sp"
                android:onClick="BTNA"
                android:text="0000" />

            <Button
                android:id="@+id/BTNSecond"
                android:layout_width="122dp"
                android:layout_height="68dp"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="#ff7589"
                android:textSize="25sp"
                android:onClick="BTNA"
                android:text="0000" />

            <Button
                android:id="@+id/BTNThird"
                android:layout_width="122dp"
                android:layout_height="68dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="115dp"
                android:background="#ff7589"
                android:textSize="25sp"
                android:onClick="BTNA"
                android:text="0000" />

            <Button
                android:id="@+id/BTNFourth"
                android:layout_width="122dp"
                android:layout_height="68dp"
                android:layout_gravity="right"
                android:layout_marginTop="115dp"
                android:layout_marginRight="20dp"
                android:background="#ff7589"
                android:onClick="BTNA"
                android:textSize="25sp"
                android:text="0000" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="240dp"
                android:background="@drawable/ic_baseline_navigate_next_24"
                android:onClick="continueM" />

        </androidx.cardview.widget.CardView>

    </GridLayout>
</RelativeLayout>